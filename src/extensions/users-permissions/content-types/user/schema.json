{
    "collectionName": "users",
    "info": {
        "name": "user",
        "description": "User model for the Users & Permissions plugin"
    },
    "options": {
        "draftAndPublish": false,
        "timestamps": true
    },
    "attributes": {
        "username": {
            "type": "string",
            "unique": true,
            "minLength": 3
        },
        "email": {
            "type": "email",
            "unique": true
        },
        "password": {
            "type": "password"
        },
        "confirmed": {
            "type": "boolean",
            "required": false
        },
        "confirmationToken": {
            "type": "string",
            "default": 0
        },
        "role": {
            "model": "role",
            "via": "users"
        }
    }
}  